{
  "name": "hershey",
  "version": "2.1.7",
  "description": "A library for generating vector paths for drawing the Hershey single-line font",
  "main": "./lib/index.js",
  "scripts": {
    "lint": "standard",
    "test:unit": "mocha --require @babel/register --recursive test/unit/**",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:functional": "cd test/functional && webpack-dev-server",
    "test": "npm run lint && npm run test:unit",
    "compile": "babel -d lib/ src/",
    "prepublishOnly": "npm audit && rimraf lib/ && npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bjnortier/hershey.git"
  },
  "keywords": [
    "font",
    "vector",
    "hershey"
  ],
  "author": "Ben Nortier <ben@bjnortier.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bjnortier/hershey/issues"
  },
  "homepage": "https://github.com/bjnortier/hershey",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "@babel/register": "^7.8.6",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "expect": "^24.9.0",
    "mocha": "^10.2.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "rimraf": "^2.7.1",
    "standard": "^12.0.1",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "font/"
    ],
    "globals": [
      "describe",
      "it",
      "before",
      "beforeEach",
      "after",
      "afterEach"
    ]
  }
}
