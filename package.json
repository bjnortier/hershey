{
  "name": "hershey",
  "version": "2.1.2",
  "description": "A library for generating vector paths for drawing the Hershey single-line font",
  "main": "./lib/index.js",
  "scripts": {
    "lint": "standard",
    "test:unit": "mocha --require @babel/register --recursive test/unit/**",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:functional": "cd test/functional && webpack-dev-server",
    "test": "npm run lint && npm run test:unit",
    "compile": "babel --optional runtime -d lib/ src/",
    "prepublishOnly": "npm audit && rimraf lib/ && npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bjnortier/hershey.git"
  },
  "keywords": [
    "font",
    "vector",
    "hershey"
  ],
  "author": "Ben Nortier <ben@bjnortier.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bjnortier/hershey/issues"
  },
  "homepage": "https://github.com/bjnortier/hershey",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "expect": "^23.6.0",
    "mocha": "^5.2.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "rimraf": "^2.6.3",
    "standard": "^12.0.1",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "font/"
    ],
    "globals": [
      "describe",
      "it",
      "before",
      "beforeEach",
      "after",
      "afterEach"
    ]
  }
}
